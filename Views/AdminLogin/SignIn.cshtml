@model PortofolioAdmin.Services.Viewmodels.AdminLoginViewmodel

<h1>Test 1</h1>
<div class="row full-page justify-content-center align-items-center">
  <form class="col-3" asp-action="SignIn" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
      <label asp-for="Login" class="" for="exampleInputEmail1"></label>
      <input asp-for="Login" type="text" class="form-control" placeholder="Enter email">
      <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
      <label asp-for="Password" for="exampleInputPassword1">Mot de passe</label>
      <input asp-for="Password" type="password" class="form-control" id="InputPassword1" placeholder="Password">
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign-up</button>
  </form>
</div>

@section Scripts
{
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
